mixin button-icon(data)
    +el({
        tag: data.tag ? data.tag : 'button',
        class: 'button-icon',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
        before: data.before,
        after: data.after,
        position: data.position,
        title: data.title,
        target: data.target,
        href: data.href
    })&attributes(attributes)
        if data.icon && !data.badge
            +el({
                tag: 'svg',
                icon: data.icon,
                class: 'button-icon__icon',
            })
        if data.text && data.icon
            +el({
                tag: 'span',
                text: data.text,
                class: 'button-icon__text',
            })
        if data.text && !data.icon
            #{data.text}
        if data.icon && data.badge
            +el({
                tag: 'svg',
                icon: data.icon,
                class: 'button-icon__icon',
            })
            +el({
                tag: 'span',
                class: 'button-icon__badge',
                text: data.badge
            })
