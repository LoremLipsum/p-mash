mixin features(data)
    +el({
        tag: 'section',
        class: 'features',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        .features__wrap
            h2.hidden Наши преимущества

            +el({
                tag: 'ul',
                class: 'features__list',
            })
                each item, index in data.items
                    +el({
                        tag: 'li',
                        class: 'features__item',
                    })

                        +features-item({
                            mod: item.mod,
                            text: item.text,
                            style: item.style,
                            image: item.image
                        })(filter="#grayscale")
