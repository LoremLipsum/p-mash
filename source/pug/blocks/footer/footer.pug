mixin footer(data)
    -
        var navFooter1 = [
            'О компании',
            'Производство',
            'Услуги',
            'Новости',
            'Статьи',
            'Контакты',
        ];
    -
        var navFooter2 = [
            'Автоматические закаточные машины',
            'Полуавтоматические закаточные машины',
            'Укупорочные машины',
            'Агрегаты дозировочно-закаточные',
            'Дозировочно-наполнительные машины',
            'Запчасти для закаточных машин',
            'Импортное оборудование',
        ];

    +el({
        tag: 'footer',
        class: 'footer',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        .footer__top
            .footer__wrap
                .footer__company
                    .footer__info
                        +logo({
                            mix: 'footer__logo',
                            secondary: true,
                            mod: 'secondary'
                        })
                        +el({
                            tag: 'p',
                            class: 'footer__text',
                            mod: 'info',
                            text: 'Производство технологического <br>оборудования <br>для консервных производств'
                        })
                    .footer__address
                        p.footer__text
                            +el({
                                tag: 'a',
                                class: 'header__phone',
                                href: 'tel:+79295407124',
                                text: '+7 (929) 540-71-24',
                            })
                            +el({
                                tag: 'a',
                                class: 'header__phone',
                                href: 'tel:+74992816944',
                                text: '+7 (499) 281-69-44',
                            })
                        +el({
                            tag: 'p',
                            class: 'footer__text',
                            mod: 'address',
                            text: '140060, Московская обл., <br>Люберецкий р-н., ул. Ленина, 52, оф.&nbsp;324'
                        })
                        p.footer__text
                            +el({
                                tag: 'a',
                                href: 'mailto:tdpmts2016@mail.ru',
                                text: 'tdpmts2016@mail.ru',
                            })
                .footer__nav(role='navigation' aria-label='Дополнительное меню' itemscope itemtype='http://schema.org/SiteNavigationElement')
                    .footer__nav-item.footer__nav-item--dropdown.footer__nav-item--company.js-footer-nav-dropdown
                        h4.footer__title.js-footer-nav-dropdown-button Компания
                        +el({
                            tag: 'ul',
                            class: 'footer__list',
                        })
                            each item in navFooter1
                                +el({
                                    tag: 'li',
                                    class: 'footer__item',
                                })(itemprop='name')
                                    +el({
                                        tag: 'a',
                                        text: item,
                                    })(itemprop='url')
                    .footer__nav-item.footer__nav-item--dropdown.footer__nav-item--equipment.js-footer-nav-dropdown
                        h4.footer__title.js-footer-nav-dropdown-button Оборудование
                        +el({
                            tag: 'ul',
                            class: 'footer__list',
                        })
                            each item in navFooter2
                                +el({
                                    tag: 'li',
                                    class: 'footer__item',
                                })(itemprop='name')
                                    +el({
                                        tag: 'a',
                                        text: item,
                                    })(itemprop='url')
        .footer__bottom
            .footer__wrap
                +el({
                    class: 'footer__copyright',
                    text: '&copy;&nbsp;Copyright 2019&nbsp;г.'
                })
                .footer__madein
                    | Сделанo в
                    span.hidden
                        | Sheer
                    +el({
                        tag: 'a',
                        href: 'https://sheer82.ru/'
                    })
                        +el({
                            tag: 'svg',
                            icon: 'sheer',
                        })
