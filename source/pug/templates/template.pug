include ./include

block vars
    - var pageTitle = 'Title'
    - var main = false

doctype html
html(lang="ru-RU")
    block head
        +head()

    body
        block icon
        block header
            +header({})
        block intro
        block content
        block footer
            +footer({})
        block modal
            +modal({
                js: 'modal-callback',
                heading: 'Заказать звонок',
            })
                +form({
                    firstName: true,
                    tel: true,
                    submit: 'Заказать',
                    modField: ['with-icon', 'border-transparent'],
                    mix: 'modal__form',
                    confirm: true,
                })
        block modalPage
        block scripts
            +scripts()
